{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.myanimelist.net/v2/:path*"
    },
    {
      "source": "/mangadex-api/:path*",
      "destination": "https://api.mangadex.org/:path*"
    },
    {
      "source": "/mangadex-covers/:path*",
      "destination": "https://uploads.mangadex.org/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/mangadex-covers/:path*",
      "headers": [
        {
          "key": "Referer",
          "value": "https://mangadex.org"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://challenges.cloudflare.com; frame-src https://challenges.cloudflare.com; font-src 'self' https://challenges.cloudflare.com https://fonts.googleapis.com https://fonts.gstatic.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' https://cdn.myanimelist.net data:; object-src 'none';"
        }
      ]
    }
  ]
}
